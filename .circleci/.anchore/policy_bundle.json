{
  "id": "default",
  "version": "1_0",
  "name": "bundle name",
  "comment": "Comment for my default bundle",
  "whitelisted_images": [],
  "mappings": [
    {
      "name": "default",
      "registry": "*",
      "repository": "*",
      "image": { "type": "tag", "value": "*" },
      "policy_ids": [ "policy" ],
      "whitelist_ids": [ "whitelist" ]
    }
  ],
  "whitelists": [
    {
      "id": "whitelist",
      "name": "Whitelisted CVE for my example",
      "version": "1_0",
      "items": [
        { "id": "item1", "gate": "vulnerabilities", "trigger": "package", "trigger_id": "CVE-YYYY-123456+Regexp for vulnerable package" }
      ]
    }
  ],
  "policies": [
    {
      "name": "default policy",
      "version": "1_0",
      "comment": "Policy for basic checks",
      "id": "policy",
      "rules": [
        {
          "action": "STOP",
          "gate": "vulnerabilities",
          "trigger": "package",
          "id": "rule1",
          "params": [
            { "name": "package_type", "value": "all" },
            { "name": "severity_comparison", "value": ">" },
            { "name": "severity", "value": "medium"}
          ]
        }
      ]
    }
  ]
}
